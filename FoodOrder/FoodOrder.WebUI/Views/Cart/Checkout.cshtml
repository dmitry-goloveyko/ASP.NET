@model FoodOrder.Domain.Entities.ShippingData

@{
    ViewBag.Title = "FoodOrder : Checkout";
}

<h2>Оформление заказа</h2>
@using (Html.BeginForm())
{
	@Html.ValidationSummary()	

	<h3>Кому:</h3>
	<div>Имя: @Html.EditorFor(x => x.Name)</div>

	<h3>Адрес:</h3>
	<div>Город: @Html.EditorFor(x => x.City)</div>
	<div>Улица: @Html.EditorFor(x => x.Street)</div>
	<div>Номер дома: @Html.EditorFor(x => x.HouseNumber)</div>
	<div>Квартира: @Html.EditorFor(x => x.ApartmentNumber)</div>

	<p>
	<input class="actionButtons" type="submit" value="Заказать" />
	</p>
}
